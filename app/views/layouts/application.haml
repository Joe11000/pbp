%html
  %head
    %title Simply Flat - Bootstrap:home
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    /
      Styles
      \==================================================
    = stylesheet_link_tag "bootstrap", "bootstrap.min", "font-awesome", "app"
    /
      Google Fonts
      \==================================================
    %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:300,400,400italic,700", :rel => "stylesheet"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Ubuntu:300,400,400italic,700", :rel => "stylesheet"}/

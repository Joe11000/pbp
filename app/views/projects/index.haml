#page-heading
  .page-header
    .container
      .row.home
        .span12
          %h1 Support local projects with your time or money.
        .span12
          .span6.pull-left
            - if @featured_project.mediafiles.find_by_media_type("photo")
              %br
              %img{src: @featured_project.mediafiles.find_by_media_type("photo").url, data: {src: "holder.js/300x200" }}
              %h3{style: "text-align: left"}= link_to @featured_project.title, project_url(@featured_project)
          
          .span3.pull-left{style: "margin-top: 35px; margin-left: 45px;"}
            .dollars
              %h5{style: "text-align: left"}= Dollars Donated - "(#{@featured_project.get_dollars_donated / @featured_project.get_dollar_goal.to_f) / 100}"}
              .progress{class: "progress"}
                .bar{style: "width: #{ (@featured_project.get_dollars_donated / @featured_project.get_dollar_goal.to_f) }%;"}
            .hours
              %h5{style: "text-align: left"} Hours Donated
              .progress{class: "progress"}
                .bar{style: "width: #{ (@featured_project.hours_donated / @featured_project.hour_goal.to_f) * 100 }%;"}

        .home-btns.span12.clearfix
          %a.btn{:href => project_url(@featured_project)}
            %i.icon-plus
            Back this project
          %a.btn{:href => "#trending-projects"}
            %i.icon-plus
            See more projects
        
  .home-cta
    .container
      .arrow-down
      .home-cta-inner.text-center
        %h3
          See how you can make an impact today. It's simple.
          %a.btn.cta-btn{:href => "/starts"}
            %i.icon-plus
            Get Started
%hr.hr-spacer.space35
/
  Home Container
  \==================================================
#home
  .container
    /
      Content Block
      \==================================================
    .row-fluid
      <div class"span12">
      %h1#trending-projects Trending Projects
  - @projects.each_slice(3) do |row|
    .row-fluid
      - row.each do |project|
        .span4.content-box-light.feature
          - if project.mediafiles.find_by_media_type("photo")
            %br
            = link_to image_tag(project.mediafiles.find_by_media_type("photo").url, data: {src: "holder.js/300x200" }), project_url(project)
          %h3{style: "text-align: left"}= link_to project.title, project_url(project)
          .dollars
            %h5{style: "text-align: left"} Dollars
            .progress{class: "progress"}
              .bar{style: "width: #{ (project.get_dollars_donated / project.get_dollar_goal.to_f) }%;"}
          .hours
            %h5{style: "text-align: left"} Hours
            .progress{class: "progress"}
              .bar{style: "width: #{ (project.hours_donated / project.hour_goal.to_f) * 100 }%;"}
    %hr.hr-spacer.space50/

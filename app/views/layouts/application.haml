    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      = javascript_include_tag "application"
      = csrf_meta_tags
  %body
    /
      Page Wrapper
      \==================================================
    #wrap.page
      /
        Navbar
        \==================================================
      .nav-wrap
        .container
          .navbar
            .navbar-inner
              .container
                %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                %a.brand{:href => "index.html"}
                  %strong Parkbench Projects
                .nav-collapse.collapse
                  %ul.nav.pull-right
                    %li.active
                      = link_to "Create A Project", new_project_url
                    %li.divider-vertical
                    %li
                      = render 'sessions/login'
                    %li.divider-vertical
                    %li
                      %a{:href => "contact.html"} Support US
                    %li.divider-vertical
                    %li
                      %a{:href => "blog.html"} Blog
                    %li.divider-vertical
                    %li.dropdown
                      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                        Pages
                        %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => "features.html"} Features
                        %li
                          %a{:href => "portfolio.html"} Portfolio
                        %li
                          %a{:href => "portfolio-item.html"} Portfolio Item
                        %li
                          %a{:href => "coming-soon.html"} Coming Soon
    
      = yield

